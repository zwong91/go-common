    name = "egg",
    srcs = ["egg.go"],
    importpath = "go-common/app/interface/main/app-resource/dao/egg",
    tags = ["automanaged"],
    visibility = ["//visibility:public"],
    deps = [
        "//app/interface/main/app-resource/conf",
        "//app/interface/main/app-resource/model/static",
        "//library/database/sql",
        "//library/log",
    ],
)

