    srcs = ["http.go"],
    importpath = "go-common/app/job/main/app/http",
    tags = ["automanaged"],
    deps = [
        "//app/job/main/app/conf",
        "//app/job/main/app/service",
        "//app/job/main/app/service/feed",
        "//app/job/main/app/service/show",
